<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.guiproject.Controller">
   <children>
      <Button fx:id="showalllecturersbtn" layoutX="109.0" layoutY="84.0" mnemonicParsing="false" onAction="#SwitchToShowAllLecturers">
         <graphic>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@showStudent.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Label layoutX="97.0" layoutY="255.0" prefHeight="40.0" prefWidth="194.0" text="Show all lecturers">
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font>
      </Label>
      <Button fx:id="registernewstudentbtn" layoutX="342.0" layoutY="84.0" mnemonicParsing="false" onAction="#SwitchToAddNewLecturer">
         <graphic>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@login.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="backbtn" layoutX="45.0" layoutY="338.0" mnemonicParsing="false" onAction="#SwitchToMainMenu" prefHeight="38.0" prefWidth="62.0" style="-fx-background-color: blue; -fx-background-radius: 20;" text="Back" />
      <Label layoutX="342.0" layoutY="259.0" prefHeight="18.0" prefWidth="218.0" text="Register new lecturer">
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font>
      </Label>
      <Label layoutX="263.0" layoutY="24.0" text="Lectures" textAlignment="CENTER">
         <font>
            <Font name="System Bold Italic" size="26.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
