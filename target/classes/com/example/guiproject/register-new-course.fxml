<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.guiproject.Controller">
   <children>
      <TextField fx:id="course_name_TF" layoutX="214.0" layoutY="101.0" promptText="Course name" />
      <TextField fx:id="course_code_TF" layoutX="214.0" layoutY="139.0" promptText="Course code" />
      <TextField fx:id="course_credit_hours_TF" layoutX="214.0" layoutY="174.0" promptText="Course credit hours" />
      <TextField fx:id="course_department_TF" layoutX="214.0" layoutY="214.0" promptText="Course department" />
      <TextField fx:id="course_semester_TF" layoutX="214.0" layoutY="249.0" promptText="Course semester" />
      <TextField fx:id="course_year_TF" layoutX="214.0" layoutY="286.0" promptText="Course year" />
      <TextField fx:id="course_lecturer_TF" layoutX="214.0" layoutY="319.0" promptText="Lecturer name" />
      <Label layoutX="156.0" layoutY="25.0" text="Register new course">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>
